<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Translucent"
    android:background="#e66301"

    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip!!!"
        android:textColor="#FFFFFF98"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>



    <TextView
        android:id="@+id/instru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFFFFF98"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:textSize="28dp"

        android:text="To complete the game you need to find all the items at least once. Each item is
worth 1 point."/>


    <TextView
        android:id="@+id/ins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF98"
        android:gravity="center"
        android:layout_margin="5dp"

        android:text="The special items (with the crown) are worth 5!"
        android:textSize="28dp"
        />


    <TextView
        android:id="@+id/ins2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF98"
        android:gravity="center"
        android:layout_margin="5dp"

        android:text="When youÊ¼ve found all the items the game is over. How many points will you
get?"
        android:textSize="28dp"
        />
    <Button
        android:id="@+id/start_play"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="   Play Now  "
        android:background="@drawable/rounded_bg_corner"
        android:layout_marginBottom="10dp"
        android:textColor="#FF1100"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
