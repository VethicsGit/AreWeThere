<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgound"
    tools:context = ".MainActivity">

    <ImageView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttons_layout"
        android:src = "@drawable/areyouthereyet_small"/>
    <TextView
        android:id="@+id/id"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id = "@+id/sound_imageView"
        android:layout_width = "40dp"
        android:layout_height = "40dp"
        android:scaleType="centerCrop"
        android:padding="08dp"
        android:layout_alignParentTop = "true"
        android:layout_alignParentRight="true"
        android:layout_marginTop = "6dp"
        android:layout_marginRight="6dp"
        android:background = "@drawable/rounded_bg_corner"
        android:src = "@drawable/volume" />

    <ImageView
        android:id = "@+id/sound_imageView2"
        android:layout_width = "40dp"
        android:layout_height = "40dp"
        android:scaleType="centerCrop"
        android:padding="08dp"
        android:layout_alignParentTop = "true"
        android:layout_alignParentRight="true"
        android:layout_marginTop = "6dp"
        android:layout_marginRight="6dp"
        android:background = "@drawable/rounded_bg_corner"
        android:src = "@drawable/volume" />



    <ImageView
        android:id = "@+id/itemListImageView"
        android:layout_width = "40dp"
        android:layout_height = "40dp"
        android:layout_marginLeft = "6dp"
        android:layout_marginTop = "6dp"
        android:src="@drawable/menul"
        android:visibility="gone"
        android:padding="8dp"
        android:background = "@drawable/rounded_bg_corner" />

    <LinearLayout
        android:id = "@+id/buttons_layout"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:orientation = "vertical"
        android:padding = "50dp">

        <Button
            android:id = "@+id/play_easy_mode_button"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginBottom = "12dp"
            android:background = "@drawable/rounded_bg_corner"
            android:padding = "15dp"
            android:text = 'play "easy" mode'
            android:textAlignment = "center"
            android:textColor = "@color/orange_text"
            android:textSize = "28dp" />

        <Button
            android:id = "@+id/play_trip_mode_button"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginBottom = "17dp"
            android:background = "@drawable/rounded_bg_corner"
            android:padding = "15dp"
            android:text =  'play "time" mode'
            android:textAlignment = "center"
            android:textColor = "@color/orange_text"
            android:textSize = "28dp" />

        <Button
            android:id = "@+id/how_to_play_button"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginBottom = "10dp"
            android:background = "@drawable/rounded_bg_corner"
            android:padding = "15dp"
            android:text = "@string/how_to_play"
            android:textAlignment = "center"
            android:textColor = "@color/orange_text"
            android:textSize = "30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        />
</RelativeLayout>