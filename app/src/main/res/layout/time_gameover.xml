<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/back"
    android:background="@drawable/red_gameover">

    <ImageView
        android:id="@+id/game_over_iv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/closebutton" />


    <TextView
        android:id="@+id/over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="     Time Over     "
        android:textColor="#FFFFFF98"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <TextView

        android:id="@+id/word1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF98"
        android:layout_below="@id/over"
        android:textSize="25dp"
        android:text="you found 15 item"/>


    <TextView

        android:id="@+id/totalpoint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF98"
        android:layout_below="@id/word1"
        android:textSize="25dp"
        android:layout_toLeftOf="@id/word2"
        android:text="00"/>


    <TextView

        android:id="@+id/word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/word1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text=" point + "
        android:textColor="#FFFFFF98"
        android:textSize="25dp" />


    <TextView

        android:id="@+id/leftpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalpoint2"
        android:layout_gravity="center"
        android:layout_marginTop="-3dp"
        android:gravity="center"
        android:text=" 00"
        android:layout_toLeftOf="@id/word3"
        android:textColor="#FFFFFF98"
        android:textSize="25dp" />


    <TextView

        android:id="@+id/word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalpoint2"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text=" Bonus Point"
        android:textColor="#FFFFFF98"
        android:textSize="25dp" />




    <TextView
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@id/word3"
        android:textColor="#FFFFFF"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/totalpoint"
        android:textSize="30dp"

        />


    <TextView
        android:id="@+id/totalpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 00 "
        android:layout_below="@id/word3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        />




    <TextView
        android:id="@+id/word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="point"
        android:layout_below="@id/word3"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        android:layout_toRightOf="@id/totalpoint"
        android:textSize="25dp"
        />

</RelativeLayout>
