<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "wrap_content"
    android:layout_height = "70dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:id="@+id/back"
    android:background="@drawable/grey_box">

    <ImageView
        android:id="@+id/grayImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/itemNameTextView"
        android:layout_marginTop="-16dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/crown_grey"
        android:layout_marginTop="15dp"
        android:id="@+id/special_box"
        android:visibility="gone"
        android:layout_marginLeft="12dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/position"/>

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:text="ItemName"
        android:maxLines="1"
        android:textColor="#777777"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:textSize="28dp"
        android:textStyle="bold"
        android:id="@+id/itemNameTextView"/>
    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:text="ItemName"
        android:maxLines="1"
        android:textColor="#777777"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="65dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:textSize="28dp"
        android:textStyle="bold"
        android:id="@+id/itemNameTextView2"/>


    <TextView
        android:id="@+id/counttxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="X"
        android:layout_alignParentRight="true"
        android:textSize="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        />

    <!--<TextView-->
        <!--android:layout_width = "wrap_content"-->
        <!--android:layout_height = "wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_margin="18dp"-->
        <!--android:text="itemcount"-->
        <!--android:textSize="25dp"-->
        <!--android:textStyle="bold"-->
        <!--android:textColor="#00FE80"-->
        <!--android:id="@+id/itemCountTextView"/>-->
</RelativeLayout>
